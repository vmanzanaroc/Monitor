<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
    <shape android:shape="rectangle">
        <gradient
            android:startColor="#175E2D"
            android:endColor="#64F781"
            android:angle="270"/>
        <padding android:left="25dp" android:top="15dp" android:right="25dp" android:bottom="15dp"/>
        <corners android:radius="13dp"/> <!-- Reducido para compensar el margen -->
    </shape>
</item>
</layer-list>


